<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class= 'required-fields-sign-in'>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder: "Your Email" %>

    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, placeholder: "Username" %>

    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (6) character min." %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
</br>
  <% f.label :title %>
<%= f.text_field :title, placeholder: "Your title - Optional"%>
</br>
  <% f.label :experience_level %>
<%= f.text_field :experience_level, placeholder: "Your Experience Level - Optional" %>
</br>
  <% f.label :territory %>
<%= f.text_field :territory, placeholder: "Your Territory - Optional"%>

</div>

<div>
  <% f.submit %>
  <button class="button" style="font-weight: bold;">Register</button>
</div>
</div>
<% end %>

<%= render "devise/shared/links" %>
