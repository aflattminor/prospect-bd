<div class='edit-lead-form'>

<%= form_for [@user, @lead]  do |f| %>

    <div class= 'required-fields'>
      <% f.label :name %>
      <%= f.text_field :name, placeholder: "Name" %><br />

      <% f.label :position %>
      <%= f.text_field :position, placeholder: "Position" %><br />

      <% f.label :phone_number %>
      <%= f.text_field :phone_number, placeholder: "Direct Dial" %><br/>

      <% f.label :email %>
      <%= f.text_field :email, placeholder: "Email" %><br />
      <div>
        <% f.submit %>
        <button class="button">Save Updates</button>
      </div>
  <% end %>
</div>
